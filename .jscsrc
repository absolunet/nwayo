// http://jscs.info/rules
{
  "esnext": true,


  "disallowEmptyBlocks": {
    "allExcept": ["comments"]
  },

  "disallowMultipleLineStrings": true,

  "disallowTrailingComma": true,

  //maximumLineLength

  "requireCamelCaseOrUpperCaseIdentifiers": {
    "ignoreProperties": false,
    "strict": false
  },

  "requireDotNotation": {
    "allExcept": ["keywords", "snake_case"]
  },

  "requireParenthesesAroundIIFE": true,

  "validateIndentation": {
    "value": "\t",
    "allExcept": ["comments"]
  },

  "validateQuoteMarks": {
    "mark":   "'",
    "escape": true
  }
}
