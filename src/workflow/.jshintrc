// http://www.jshint.com/docs/options
{
  "node": true,

  // enforcing options
  "bitwise":       true,
  "camelcase":     true, // deprecated
  "curly":         true,
  "eqeqeq":        true,
  "es3":           true,
  "es5":           false,
  "forin":         true,
  "futurehostile": true,
  "freeze":        true,
  "immed":         true, // deprecated
  "latedef":       true,
  "noarg":         true,
  "nocomma":       false,
  "nonbsp":        true,
  "nonew":         true,
  "plusplus":      false,
  "quotmark":      "single", // deprecated
  "singleGroups":  true,
  "undef":         true,
  "unused":        true,
  "strict":        true,
  "maxparams":     false,
  "maxdepth":      false,
  "maxstatements": false,
  "maxcomplexity": false,
  "maxerr":        0,
  "varstmt":       false, // eventually

  // relaxing options
  "asi":           false,
  "boss":          false,
  "debug":         false,
  "elision":       false,
  "eqnull":        false,
  "esnext":        true,
  "evil":          false,
  "expr":          false,
  "funcscope":     false,
  "globalstrict":  false,
  "iterator":      false,
  "lastsemic":     false,
  "loopfunc":      false,
  "maxerr":        false,
  "moz":           false,
  "notypeof":      false,
  "noyield":       false,
  "proto":         false,
  "scripturl":     false,
  "shadow":        false,
  "sub":           true,  // deprecated
  "supernew":      false,
  "validthis":     false,
  "withstmt":      false
}
