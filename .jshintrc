// http://www.jshint.com/docs/options
{
  "globals": {
    "document":  false,
    "global":    false,
    "$Global":   false,
    "Modernizr": false,
    "_":         false,
    "PubSub":    false,
    "Cookies":   false,
    "kafe":      false,
    "google":    false,
    "konstan":   false,
    "app":       false,
    "__":        false
  },


  // --- Deprecated ---
  "camelcase": true,
  "es3":       true,
  "es5":       false,
  "esnext":    true,
  "immed":     true,
  "quotmark":  "single",
  "sub":       true,


  // Enforcing options
  "bitwise":       true,
  "curly":         true,
  "eqeqeq":        true,
//  "esversion":     6,
  "forin":         true,
  "freeze":        true,
  "funcscope":     false,
  "futurehostile": true,
  "iterator":      false,
  "latedef":       true,
  "maxcomplexity": false,
  "maxdepth":      false,
  "maxerr":        0,
  "maxparams":     false,
  "maxstatements": false,
  "noarg":         true,
  "nocomma":       false,
  "nonbsp":        true,
  "nonew":         true,
  "notypeof":      false,
  "predef":        false,
  "shadow":        false,
  "singleGroups":  true,
  "strict":        true,
  "undef":         true,
  "unused":        true,
  "varstmt":       true,

  // Relaxing options
  "asi":           false,
  "boss":          false,
  "debug":         false,
  "elision":       false,
  "eqnull":        false,
  "evil":          false,
  "expr":          false,
  "lastsemic":     false,
  "loopfunc":      false,
  "moz":           false,
  "noyield":       false,
  "plusplus":      false,
  "proto":         false,
  "scripturl":     false,
  "supernew":      false,
  "validthis":     false,
  "withstmt":      false,

  // Environments
  "browser":     false,
  "browserify":  false,
  "couch":       false,
  "devel":       true,
  "dojo":        false,
  "jasmine":     false,
  "jquery":      true,
  "mocha":       false,
  "module":      false,
  "mootools":    false,
  "node":        false,
  "nonstandard": false,
  "phantom":     false,
  "prototypejs": false,
  "qunit":       false,
  "rhino":       false,
  "shelljs":     false,
  "typed":       false,
  "worker":      false,
  "wsh":         false,
  "yui":         false
}
