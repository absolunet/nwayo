# https://editorconfig.org

root = true

[*.{css,less,scss,js,html,jshtml,md}]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,rb,yaml,yml}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{.editorconfig,.gitignore,.npmignore}]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
