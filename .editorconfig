# http://editorconfig.org

[*.{css,less,scss,js,html,md}]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.gitignore]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{.bowerrc,.editorconfig,.jscsrc,.jshintrc,.scss-lint.yml,bower.json,config.rb,lodash.yaml,konstan.yaml,modernizr.yaml,package.json,bundles/**.yaml}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
